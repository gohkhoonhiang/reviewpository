<h1>Edit Item</h1>

<%= form_for @item, url: item_path(@item), method: :patch do |f| %>
  <div class="form-group">
  <%= f.label :category %>
  <%= f.select :category, [['Book','book'],['Music','music'],['Movie','movie']], {}, class: "form-control", disabled: true %>
  </div>
  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :stakeholder, "Author(s), Composer(s), Artist(s), Director(s), Actor(s)..." %>
  <%= f.text_field :stakeholder, value: @item.stakeholders.map{|s| s.name}.join(","), class: "form-control" %>
  </div>
  <%= f.submit "Save Changes", class: "btn btn-primary" %>
  <%= link_to "Back to Item", item_path(@item), class: "btn btn-default" %>
<% end %>

